<h1>THE LONGEST WORD GAME</h1>

<div class="wrapper"><% @letters.each do |letter| %>
  <h3 class="letter"> <%= letter %> </h3>
<% end %></div>

<form action="/score" method="post" class="container">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input class="form" type="text" name="input" placeholder="Enter Word Here">
  <input class="button" type="submit" value="Play!">
</form>

<h4 class="btn btn-info btn-lg"> <%= link_to "Generate New Letters", new_path, :class => "generate"  %> </h4>
